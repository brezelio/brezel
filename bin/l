#! /usr/bin/env bash

# Run php bakery load

start=$(date +%s)

echo "bakery load..."
php bakery load

end=$(date +%s)

echo "bin/l took: $((end - start)) second(s)"

if [ "$(uname)" == "Darwin" ]; then
  # Do something under Mac OS X platform
  say bin/l
elif command -v notify-send &> /dev/null
then
  # If "notify-send" is installed, send a notification
  notify-send -a "Brezel Bakery" "Load is done" "The changes from bin/l should be visible. It took $((end - start)) second(s)"
fi
