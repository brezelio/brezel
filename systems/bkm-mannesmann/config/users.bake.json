[
  {
    "resource_module": "users",
    "resource": {
      "identifier": "users",
      "type": "users",
      "icon": "user",
      "fields": [
        {
          "identifier": "name",
          "type": "text"
        },
        {
          "identifier": "email",
          "type": "email"
        },
        {
          "identifier": "password",
          "type": "password",
          "options": {
            "ignore_when_empty": true
          }
        },
        {
          "identifier": "role",
          "type": "choice",
          "options": {
            "values": ["admin", "backoffice", "employee"]
          }
        },
        {
          "identifier": "address",
          "type": "text"
        },
        {
          "identifier": "zip",
          "type": "number"
        },
        {
          "identifier": "city",
          "type": "text"
        },
        {
          "identifier": "phone",
          "type": "tel"
        }
      ],
      "layouts": {
        "detail": "${file('/config/users.detail.json')}"
      }
    }
  }
]
