{% block content %}
<!DOCTYPE html>
  <html lang="de">
    <head>
      <meta charset="utf-8" />
      <title>Offer</title>
      <style>
        html {
          font-family: "TeX Gyre Heros", serif;
        
        }
        body {
          margin-left: 10mm;
          margin-right: 10mm;
        }
        .top_main {
          width: 100%;
          position: relative;
          height: 38mm;
        }
        .section_top_left {
          position: absolute;
          width: 55%;
        }
        .section_top_right {
          background-color: #8f8989;
          position: absolute;
          right: 1mm;
          height: 38mm;
          border-radius:2mm;
        }
        .class_sauerland{
          padding-top:5mm;
          font-size:20px;
          text-align:center;
          text-transform: uppercase;
        }
        .section_top_right_details{
          margin-left:10px;
          font-size:18px;
        }
        .section_top_right_icons{
          color:green;
        }
        .positions {
          border-spacing: 0;
          width: 100%;
        }
        .positions th,
        .positions td {
          padding: 1mm;
          vertical-align: middle;
          border: 1px solid black;
        }
        .min-td {
          width: auto;
          white-space: nowrap;
        }
        .text-right {
          text-align: right;
        }
        .text-left {
          text-align: left;
        }
        table .border-none{
          border:none;
          text-align:left;
        }
      </style>
    </head>
    <body>
      <section class="top_main">
        <section class="section_top_left"></section>
        <section class="section_top_right">
          <div class="class_sauerland">Bwa Sauerland gmbh </div>
          <div class="section_top_right_details">
          <span class="section_top_right_icons" style="font-size:16px">&#127760</span> Peter-Dassis-Ring 40a, 57482 Wenden
          <br />
          <span class="section_top_right_icons" style="font-size:16px">&#128222</span> 02762-98 19 499
          <br />
          <span class="section_top_right_icons"style="font-size:20px" > &#x2709</span> info@bwa-sauerland.de
        </section>
      </section>
      <hr />

      <section class="section_content">
        <section class="section_content_offer">
          <b>{{t('pdf.offer.offer')}}/{{t('pdf.offer.order')}}</b> <br />
           <section class="table-responsive" style="overflow-x: auto; border-collapse: collapse;">
        <table class="positions" style="border-collapse: collapse;">
          <thead>
            <tr class="" style="width: 100%;">
              <th class="border-none">{{t('pdf.offer.customer_address')}}: </th>
              <th class="border-none">{{t('pdf.offer.property')}}: </th>
            </tr>
          </thead>
          <tbody>
                <tr class="position-row">
                  <td class="border-none">{{resource.customer.name}} {{resource.customer.name}}
                  <br>{{resource.customer.invoice_address }} {{resource.customer.invoice_address }} <br> {{resource.customer.invoice_zip}} {{resource.customer.invoice_city}} <br>
                  {{t('pdf.offer.landline')}}: {{resource.customer.phone_landline}}<br>
                  {{t('pdf.offer.mobile')}}: {{resource.customer.phone_mobile}}<br>
                  {{t('pdf.offer.email')}}: {{resource.customer.email}}
                  </td>
                  <td class="border-none">{{resource.customer.name}} {{resource.customer.name}}
                  <br>{{resource.customer.invoice_address }} {{resource.customer.invoice_address }} <br> {{resource.customer.invoice_zip}} {{resource.customer.invoice_city}}<br>
                  {{t('pdf.offer.landline')}}: {{resource.customer.phone_landline}}<br>
                  {{t('pdf.offer.mobile')}}: {{resource.customer.phone_mobile}}<br>
                  {{t('pdf.offer.email')}}: {{resource.customer.email}} 
                </tr>
          </tbody>
        </table>
      </section>
        </section>
         
      </section>
      <section>
        <b>{{t('pdf.offer.order_data')}}:</b>
        <br>
        {{t('pdf.offer.what_is_the_problem')}} {{t('pdf.offer.horizontal_humidity')}} <b>___</b> {{t('pdf.offer.surface_moisture')}}___  {{t('pdf.offer.mold')}} __  {{t('pdf.offer.room_temperature')}}: <b>{{resource.room_temperature}}</b> {{t('pdf.offer.room_humidity')}}: <b>{{resource.room_humidity}}</b> {{t('pdf.offer.surface_temperature')}}: <b>{{resource.surface_temperature}}</b> {{t('pdf.offer.construction_year')}}: <b>{{resource.construction_year}}</b> {{t('pdf.offer.wall_material')}}: <b>{{resource.wall_material}}</b>  {{t('pdf.offer.wall_thickness')}}: <b>{{resource.wall_thickness}}</b> {{t('pdf.offer.building_type')}}: <b>{{resource.building_type}}</b> {{t('pdf.offer.EFH')}}___ {{t('pdf.offer.DHH')}}____ {{t('pdf.offer.RH')}}___ {{t('pdf.offer.MFH')}}____ {{t('pdf.offer.level')}}: <b>{{resource.level}}</b> {{t('pdf.offer.floor_material')}}: <b>{{resource.floor_material}}</b> {{t('pdf.offer.strip_foundation')}}: <b>{{resource.strip_foundation}}</b> 
        <br>
        {{t('pdf.offer.para1')}}
        {% if resource.seals_done_in_the_past == true %}
        <b>Yes</b>
        {%else%}
        <b>No</b>
        {% endif %}
        <br><br>
        <b><u>{{t('pdf.offer.para2')}}:</u><b>
      </section>
      <section class="table-responsive" style="overflow-x: auto; border-collapse: collapse;">
        <table class="positions" style="border-collapse: collapse;">
          <thead>
            <tr class="positions-head" style="width: 100%;">
              <th>{{t('pdf.offer.service')}}</th>
              <th>{{t('pdf.offer.description')}}</th>
              <th>{{t('pdf.offer.quantity')}}</th>
              <th>{{t('pdf.offer.single_price')}}</th>
              <th>{{t('pdf.offer.total_price')}}</th>
            </tr>
          </thead>
          <tbody>
            {% if resource.positions %}
              {% for  key, position in resource.positions %}
                <tr class="position-row">
                  <td class="" style="text-align: left;">{{ position.service.name ?? "" }} </td>
                  <td class="" style="text-align: left;">{{ position.description ?? "" }}</td>
                  <td class="" style="text-align: right;">{{ position.quantity ?? "" }}</td>
                      <td class="" style="text-align: right;">{{ position.single_price ?? "" }} &#8364</td>
                  <td class="" style="text-align: right;">{{ position.total_price ?? "" }}&#8364</td>
                </tr>
              {% endfor %}
            {% endif %}
          </tbody>
        </table>
      </section>
      <section>
        <p>
         {{t('pdf.offer.para3')}}
        </p>
        <p style="border:2px solid black; font-weight:bold" >
         {{t('pdf.offer.para4')}}: <span style="text-align:right;">{{resource.price_total}}</span> &#8364
        </p>
      </section>
      <section class="section_content_location">
        <table class="positions" style="margin-top:15mm";>
          <thead>
            <tr class="tables-location" style="width: 100%; ">
              <th style="width:50%;text-align:left;border:none;" >{{t('pdf.offer.place')}}:  </th>
              <th style="width: 50%;text-align:left;border:none;">{{t('pdf.offer.the_one')}}, </th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td style="border:none;">
                {{resource.customer.invoice_city}}<br>{{resource.customer.invoice_zip}}
              </td>
              <td style="border:none;";>{{resource.customer.name}}</td>
            </tr>
          </tbody>
        </table>
          <br>
        <table class="positions">
          <tbody>
            <tr>
              <td style="width:50%; border:none;text-decoration: overline;">{{t('pdf.offer.message1')}} </td>
              <td style="width:50%; border:none;text-decoration: overline;">{{t('pdf.offer.message2')}}</td>
            </tr>
          </tbody>
        </table>
      </section>
    </body>
</html>
{% endblock %}

