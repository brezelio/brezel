[
  {
    "resource_module": "customers",
    "import": true,
    "resource": {
      "identifier": "customers",
      "title": "customer_id.\"-\".name",
      "icon": "user", 
      "layouts": {
        "detail": "${file('config/customers/customers.detail.json')}",
        "index": "${file('config/customers/customers.index.json')}"

      },
      "fields": [
        {
          "identifier": "customer_id",
          "type": "incrementing"
        },
        {
          "identifier": "name",
          "type": "text",
          "options": {
            "rules": "required"
          }
        },
        {
          "identifier": "email",
          "type": "email"
        },
        {
          "identifier": "invoice_address",
          "type": "text",
          "options": {
            "rules": "required"
          }
        },
        {
          "identifier": "invoice_zip",
          "type": "text",
          "options": {
            "rules": "required"
          }
        },
        {
          "identifier": "invoice_city",
          "type": "text",
          "options": {
            "rules": "required"
          }
        },
        {
          "identifier": "phone_landline",
          "type": "tel"
        },
        {
          "identifier": "phone_mobile",
          "type": "tel"
        }
      ]
    }
  }
]
