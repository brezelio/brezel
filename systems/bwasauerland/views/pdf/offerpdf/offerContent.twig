{% block content %}
<!DOCTYPE html>
  <html lang="de">
    <head>
      <meta charset="utf-8" />
      <title>Offer</title>
      <style>
          * {
              overflow: hidden;
          }

        html {
          font-family: "TeX Gyre Heros", serif;

        }
        body {
            line-height: 1;
        }
        .top_main {
          width: 100%;
          position: relative;
          height: 38mm;
        }
        .section_top_left {
          position: absolute;
          width: 55%;
        }
        .section_top_right {
          background-color: #8f8989;
          position: absolute;
          right: 1mm;
          height: 38mm;
          border-radius:2mm;
        }
        .class_sauerland{
          padding-top:5mm;
          font-size:20px;
          text-align:center;
          text-transform: uppercase;
        }
        .section_top_right_details{
          margin-left:10px;
          font-size:18px;
        }
        .section_top_right_icons{
          color:green;
        }
        .positions {
          border-spacing: 0;
          width: 100%;
        }

        .positions tr {
            padding-bottom: 1cm;
        }

        .positions th,
        .positions td {
          padding: 1mm;
          vertical-align: middle;
          border: 1px solid black;
        }
        .min-td {
          width: auto;
          white-space: nowrap;
        }
        .text-right {
          text-align: right;
        }
        .text-left {
          text-align: left;
        }
        table .border-none{
          border:none;
          text-align:left;
        }

        #offer_info tr td tr td {
            padding-right: 1cm;
        }
      </style>
    </head>
    <body>
      <section class="top_main">
        <section class="section_top_left"></section>
        <section class="section_top_right">
          <div class="class_sauerland">Bwa Sauerland gmbh </div>
          <div class="section_top_right_details">
          <span class="section_top_right_icons" style="font-size:16px">&#127760</span> Peter-Dassis-Ring 40a, 57482 Wenden
          <br />
          <span class="section_top_right_icons" style="font-size:16px">&#128222</span> 02762-98 19 499
          <br />
          <span class="section_top_right_icons"style="font-size:20px" > &#x2709</span> info@bwa-sauerland.de
        </section>
      </section>
      <hr />

      <section class="section_content">
        <section class="section_content_offer">
          <b>{{t('pdf.offer.offer')}}</b> <br><br>
           <section class="table-responsive" style="overflow-x: auto; border-collapse: collapse;">
        <table class="positions" style="border-collapse: collapse;">
          <thead>
            <tr class="" style="width: 100%;">
              <th class="border-none">{{t('pdf.offer.customer_address')}}: </th>
              <th class="border-none">{{t('pdf.offer.property')}}: </th>
            </tr>
          </thead>
          <tbody>
                <tr class="position-row">
                  <td class="border-none" style="vertical-align: top;">
                      <br>{{resource.customer.address_line_1 }} {{resource.customer.address_line_2 }} <br> {{resource.customer.address_street }} <br>{{resource.customer.address_zip}} {{resource.customer.address_city}} <br><br>
                  {{t('pdf.offer.landline')}}: {{resource.customer.phone_landline}}<br>
                  {{t('pdf.offer.mobile')}}: {{resource.customer.phone_mobile}}<br>
                  {{t('pdf.offer.email')}}: {{resource.customer.email}}
                  </td>
                    <td class="border-none" style="vertical-align: top;">
                        <br>{{resource.object.address_line_1 }} {{resource.object.address_line_2 }} <br> {{resource.object.address_street }} <br>{{resource.object.address_zip}} {{resource.object.address_city}} <br><br>
                    </td>
                </tr>
          </tbody>
        </table>
      </section>
        </section>

      </section>
      <section>
          <br>
        <b>{{t('pdf.offer.order_data')}}:</b>
          <br>
          <table style="width: 100%;" id="offer_info">
              <tr>
                  <td style="vertical-align: top;"><table>
                          <tr>
                              <td>{{t('pdf.offer.what_is_the_problem')}}</td>
                              <td>{{t('pdf.offer.horizontal_humidity')}}</td>
                          </tr>
                          <tr>
                              <td>{{t('pdf.offer.surface_moisture')}}</td>
                              <td>{{t('pdf.offer.mold')}}</td>
                          </tr>
                          <tr>
                              <td>{{t('pdf.offer.room_temperature')}}</td>
                              <td>{{resource.room_temperature}}</td>
                          </tr>
                          <tr>
                              <td>{{t('pdf.offer.room_humidity')}}</td>
                              <td>{{resource.room_humidity}}</td>
                          </tr>
                          <tr>
                              <td>{{t('pdf.offer.surface_temperature')}}</td>
                              <td>{{resource.surface_temperature}}</td>
                          </tr>
                          <tr>
                              <td>{{t('pdf.offer.construction_year')}}</td>
                              <td>{{resource.construction_year}}</td>
                          </tr>
                      </table></td>
                  <td style="vertical-align: top;"><table>
                          <tr>
                              <td>{{t('pdf.offer.wall_material')}}</td>
                              <td>{{resource.wall_material}}</td>
                          </tr>
                          <tr>
                              <td>{{t('pdf.offer.wall_thickness')}}</td>
                              <td>{{resource.wall_thickness}}</td>
                          </tr>
                          <tr>
                              <td>{{t('pdf.offer.building_type')}}</td>
                              <td>{{resource.building_type}} {{ resource.level }}</td>
                          </tr>
                          <tr>
                              <td>{{t('pdf.offer.floor_material')}}</td>
                              <td>{{resource.floor_material}}</td>
                          </tr>
                          <tr>
                              <td>{{t('pdf.offer.strip_foundation')}}</td>
                              <td>{{resource.strip_foundation}}</td>
                          </tr>
                          <tr>
                              <td>{{t('pdf.offer.para1')}}</td>
                              <td>{% if resource.seals_done_in_the_past == true %}
                                      Ja
                                  {%else%}
                                      Nein
                                  {% endif %}</td>
                          </tr>
                      </table></td>
              </tr>
          </table>
      </section>
      <br><br><br>
      <section class="table-responsive" style="overflow-x: auto; border-collapse: collapse;">
        <table class="positions" style="border-collapse: collapse;">
          <thead>
            <tr class="positions-head" style="width: 100%;">
              <th style="width: 1px; padding: 0 10px 0 10px;">{{t('pdf.offer.service')}}</th>
              <th style="text-align: left; padding: 0 10px 0 10px;">{{t('pdf.offer.description')}}</th>
              <th style="width: 1px; padding: 0 10px 0 10px;">{{t('pdf.offer.quantity')}}</th>
              <th style="width: 1px; padding: 0 10px 0 10px;">{{t('pdf.offer.single_price')}}</th>
              <th style="width: 1px; padding: 0 10px 0 10px;">{{t('pdf.offer.total_price')}}</th>
            </tr>
          </thead>
          <tbody>
            {% if resource.positions %}
              {% for  key, position in resource.positions %}
                <tr class="position-row">
                  <td class="" style="text-align: left; width: 1px;">{{ position.service.name ?? "" }} </td>
                  <td class="" style="text-align: left;">{{ position.description ?? "" }}</td>
                  <td class="" style="text-align: right;  width: 1px;">{{ position.quantity ?? "" }}</td>
                      <td class="" style="text-align: right;  width: 1px;">{{ position.single_price ?? "" }} &#8364</td>
                  <td class="" style="text-align: right;  width: 1px;">{{ position.total_price ?? "" }}&#8364</td>
                </tr>
              {% endfor %}
            {% endif %}
          </tbody>
        </table>
      </section>
      <section>
          <div style="float: right;">
              <table>
                  <tr>
                      <td style="padding-right: 0.5cm;">{{t('pdf.offer.net_price')}}</td>
                      <td style="text-align: right;">{{resource.price_net}}&#8364</td>
                  </tr>
                  <tr>
                      <td style="padding-right: 0.5cm;">{{t('pdf.offer.taxrate')}} ({{ resource.taxrate }}%)</td>
                      <td style="text-align: right;">{{resource.tax_amount}} &#8364</td>
                  </tr>
                  <tr>
                      <td style="padding-right: 0.5cm;"><b>{{t('pdf.offer.total_price')}}</b></td>
                      <td style="text-align: right;"><b>{{resource.price_total}} &#8364</b></td>
                  </tr>
              </table>
          </div>
      </section>
      <section class="section_content_location" style="clear: both;">
          <p style="font-weight:bold;">{{t('pdf.offer.para4')}}</p>
          <p>{{resource.pdf_info_text}}</p>
      </section>
    </body>
</html>
{% endblock %}

